{
  "name": "vn-spr-api",
  "version": "1.0.0",
  "description": "(VN) Student Progress Report API",
  "main": "dist/app.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "start": "ts-node src/index.ts",
    "start:dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "fmt": "npm run fix:lint && npm run fix:prettier",
    "commitlint-check": "commitlint",
    "swagger": "tsoa spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KL-Engineering/vn-spr.git"
  },
  "bugs": {
    "url": "https://github.com/KL-Engineering/vn-spr/issues"
  },
  "homepage": "https://github.com/KL-Engineering/vn-spr#readme",
  "keywords": [
    "student",
    "progress",
    "report"
  ],
  "author": "KLVN",
  "license": "ISC",
  "dependencies": {
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "swagger-ui-express": "4.3.0",
    "tsoa": "3.14.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@types/express": "4.17.13",
    "@types/http-errors": "1.8.2",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.23",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "concurrently": "7.1.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-functional": "4.2.1",
    "eslint-plugin-import": "2.26.0",
    "http-errors": "2.0.0",
    "husky": "7.0.4",
    "inquirer": "8.2.2",
    "jest": "27.5.1",
    "nodemon": "2.0.15",
    "prettier": "2.6.2",
    "supertest": "6.2.2",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "prettier": {
    "singleQuote": true
  }
}
